<script>
  document.getElementById('submitQuiz').addEventListener('click', () => {
    let score = 0;
    const totalQuestions = 3;
    for (let i = 1; i <= totalQuestions; i++) {
      const options = document.getElementsByName('q' + i);
      for (const option of options) {
        if (option.checked && option.value === "1") {
          score++;
        }
      }
    }
    const quizResult = document.getElementById('quizResult');
    quizResult.textContent = `Voc√™ acertou ${score} de ${totalQuestions} perguntas!`;
  });

  const starfield = document.getElementById('starfield');

function criarEstrela() {
  const star = document.createElement('div');
  star.classList.add('star');

  // Tamanho aleat√≥rio entre 1px e 3px
  const size = Math.random() * 2 + 1;
  star.style.width = size + 'px';
  star.style.height = size + 'px';

  // Posi√ß√£o aleat√≥ria na tela
  star.style.top = Math.random() * 100 + 'vh';
  star.style.left = Math.random() * 100 + 'vw';

  // Anima√ß√£o com delay aleat√≥rio para efeito mais natural
  star.style.animationDelay = (Math.random() * 3) + 's';

  starfield.appendChild(star);
}

// Criar 100 estrelas para o fundo
for(let i = 0; i < 100; i++) {
  criarEstrela();
}

document.addEventListener('click', (e) => {
  const heart = document.createElement('div');
  heart.textContent = '‚ù§Ô∏è';
  heart.classList.add('exploding-heart');
  heart.style.left = e.clientX + 'px';
  heart.style.top = e.clientY + 'px';
  document.body.appendChild(heart);
  
  setTimeout(() => {
    heart.remove();
  }, 800);
});

const zoomModal = document.getElementById('zoomModal');
const zoomImg = document.getElementById('zoomImg');

// Pega todas as imagens da galeria
const galleryImgs = document.querySelectorAll('.gallery img');

galleryImgs.forEach(img => {
  img.style.cursor = 'pointer'; // muda o cursor para indicar clic√°vel
  img.addEventListener('click', () => {
    zoomImg.src = img.src;
    zoomModal.style.display = 'flex';
  });
});

// Fecha o modal ao clicar fora da imagem
zoomModal.addEventListener('click', (e) => {
  if(e.target !== zoomImg) {
    zoomModal.style.display = 'none';
    zoomImg.src = '';
  }
});

const canvas = document.getElementById('heartCanvas');
const ctx = canvas.getContext('2d');
let width, height;
let hearts = [];

function resize() {
  width = window.innerWidth;
  height = window.innerHeight;
  canvas.width = width;
  canvas.height = height;
}

window.addEventListener('resize', resize);
resize();

class Heart {
  constructor() {
    this.x = Math.random() * width;
    this.y = Math.random() * height - height;
    this.size = Math.random() * 20 + 10;
    this.speedY = Math.random() * 1 + 0.5;
    this.opacity = Math.random() * 0.5 + 0.5;
    this.angle = Math.random() * Math.PI * 2;
    this.spin = (Math.random() - 0.5) * 0.02;
  }

  draw() {
    ctx.save();
    ctx.translate(this.x, this.y);
    ctx.rotate(this.angle);
    ctx.globalAlpha = this.opacity;

    ctx.fillStyle = 'red';
    ctx.beginPath();
    ctx.moveTo(0, 0);
    ctx.bezierCurveTo(0, -this.size / 2, -this.size / 2, -this.size / 2, -this.size / 2, 0);
    ctx.bezierCurveTo(-this.size / 2, this.size / 2, 0, this.size / 1.5, 0, this.size);
    ctx.bezierCurveTo(0, this.size / 1.5, this.size / 2, this.size / 2, this.size / 2, 0);
    ctx.bezierCurveTo(this.size / 2, -this.size / 2, 0, -this.size / 2, 0, 0);
    ctx.fill();

    ctx.restore();
  }

  update() {
    this.y += this.speedY;
    this.angle += this.spin;

    if(this.y > height + this.size) {
      this.x = Math.random() * width;
      this.y = -this.size;
      this.opacity = Math.random() * 0.5 + 0.5;
      this.speedY = Math.random() * 1 + 0.5;
      this.size = Math.random() * 20 + 10;
      this.spin = (Math.random() - 0.5) * 0.02;
    }
  }
}

function animate() {
  ctx.clearRect(0, 0, width, height);
  hearts.forEach(heart => {
    heart.update();
    heart.draw();
  });
  requestAnimationFrame(animate);
}

for(let i = 0; i < 50; i++) {
  hearts.push(new Heart());
}

animate();

document.addEventListener('mousemove', e => {
  const heart = document.createElement('div');
  heart.textContent = '‚ù§Ô∏è';
  heart.className = 'follow-heart';
  heart.style.left = e.clientX + 'px';
  heart.style.top = e.clientY + 'px';

  document.body.appendChild(heart);

  setTimeout(() => {
    heart.remove();
  }, 1000); // some depois de 1 segundo
});

</script>

