  <script>
    const btn = document.getElementById('toggleGalleryBtn');
    const gallery = document.getElementById('gallery');
    const fotos = gallery.getElementsByTagName('img');
    let isVisible = false;
    let fotoAtual = 0;

    btn.addEventListener('click', () => {
      isVisible = !isVisible;
      if (isVisible) {
        gallery.style.display = 'flex';
        btn.textContent = 'Esconder Fotos';
      } else {
        gallery.style.display = 'none';
        btn.textContent = 'Mostrar Fotos';
      }
    });

    setInterval(() => {
      if (isVisible) {
        for (let i = 0; i < fotos.length; i++) {
          fotos[i].style.display = 'none';
        }
        fotos[fotoAtual].style.display = 'block';
        fotoAtual = (fotoAtual + 1) % fotos.length;
      }
    }, 2500);

    const barra = document.getElementById('barra');
    const btnMais = document.getElementById('mais');
    const btnMenos = document.getElementById('menos');
    const porcentagemDisplay = document.getElementById('porcentagem');
    let porcentagem = 10;

    function atualizarBarra() {
      barra.style.width = porcentagem + '%';
      porcentagemDisplay.textContent = porcentagem + '%';
    }
    btnMais.addEventListener('click', () => {
      if (porcentagem < 1000) {
        porcentagem += 10;
        atualizarBarra();
      }
    });
    btnMenos.addEventListener('click', () => {
      if (porcentagem > 10) {
        porcentagem -= 10;
        atualizarBarra();
      }
    });
    atualizarBarra();

    const startDate = new Date('2025-06-07T00:00:00');
    const contador = document.getElementById('contador');
    function atualizarContador() {
      const now = new Date();
      const diff = now - startDate;
      const segundos = Math.floor(diff / 1000) % 60;
      const minutos = Math.floor(diff / 60000) % 60;
      const horas = Math.floor(diff / 3600000) % 24;
      const dias = Math.floor(diff / 86400000) % 365;
      const meses = Math.floor(dias / 30);
      contador.textContent = `${meses}m ${dias}d ${horas}h ${minutos}m ${segundos}s`;
    }
    setInterval(atualizarContador, 1000);

    // Presente interativo
    const presentBtn = document.getElementById('presentBtn');
    const congratsMsg = document.getElementById('congratsMsg');
    function createParticle(x, y) {
      const particle = document.createElement('div');
      particle.classList.add('particle');
      particle.style.left = `${x}px`;
      particle.style.top = `${y}px`;
      particle.textContent = ['üíñ', '‚ú®', '‚ù§Ô∏è', 'üíù'][Math.floor(Math.random()*4)];
      document.body.appendChild(particle);
      setTimeout(() => particle.remove(), 900);
    }
    presentBtn.addEventListener('click', () => {
      const rect = presentBtn.getBoundingClientRect();
      const x = rect.left + rect.width / 2;
      const y = rect.top + rect.height / 2;
      for (let i = 0; i < 15; i++) {
        setTimeout(() => createParticle(x, y), i * 30);
      }
      congratsMsg.classList.add('show');
      setTimeout(() => congratsMsg.classList.remove('show'), 3000);
    });
  </script>
